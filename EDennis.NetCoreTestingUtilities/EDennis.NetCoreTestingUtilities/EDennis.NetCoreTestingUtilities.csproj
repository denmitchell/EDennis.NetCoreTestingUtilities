<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Dennis Mitchell</Authors>
    <Company>edennis.com</Company>
    <Description>Provides methods for executing test cases defined in JSON files, and also provides helpful Object extensions (e.g., toJsonString, fromJsonString, fromJsonPath, isEqual, isSame ... etc.)</Description>
    <PackageTags>Json Testing</PackageTags>
    <PackageProjectUrl>https://github.com/denmitchell/NetCoreTestingUtilities</PackageProjectUrl>
    <PackageIconUrl>https://github.com/denmitchell/NetCoreTestingUtilities/blob/master/EDennis.NetCoreTestingUtilities/EDennis.NetCoreTestingUtilities/edennis128.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/denmitchell/NetCoreTestingUtilities</RepositoryUrl>
    <Version>2.0.0</Version>
    <PackageReleaseNotes>Includes (a) methods for building objects from SQL Server FOR JSON queries, (b) new Json class, which provides functionality similar to the Object extensions, but targets a Json.NET JToken, rather than an object of a particuar class.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="OLDJson2Xml2.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="2.0.1" />
    <PackageReference Include="JsonDiffPatch" Version="2.0.45" />
  </ItemGroup>
  
  </Project>
